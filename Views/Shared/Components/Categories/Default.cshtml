@{
}
@model IEnumerable<string>
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a><br />


    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")"
           asp-route-category="@c">@c</a>
        <br />

    }


</div>