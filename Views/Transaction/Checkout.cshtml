@{
}

@model Transaction

<h2>Checkout</h2>


<form method="post" asp-controller="Transaction" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Ship To:</h4>
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label><input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label><input asp-for="LastName" class="form-control" />
    </div>
    <br />
    <h4>Payment:</h4>
    <div class="form-group">
        <label asp-for="CreditCardNumber">Credit Card Number</label><input asp-for="CreditCardNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SecurityCode">Security Code:</label><input asp-for="SecurityCode" class="form-control" />
    </div>
    <h4>Address:</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label><input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip code:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label><input asp-for="Country" class="form-control" />
    </div>

    <br />

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Checkout" />
    </div>
</form>